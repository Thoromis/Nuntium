<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Enter a conversation topic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white" android:textAlignment="center"
            android:background="@color/colorPrimary" android:gravity="center" android:foregroundGravity="center"
            android:textSize="18sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/conversation_dialog_et_topic" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:hint="Conversation Topic" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/conversation_dialog_cancel"/>
    <Button
            android:text="Submit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/conversation_dialog_submit" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/conversation_dialog_cancel"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Cancel"
            android:layout_height="40dp"
            android:id="@+id/conversation_dialog_cancel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/conversation_dialog_submit" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:layout_width="0dp"
            app:layout_constraintHorizontal_chainStyle="spread" android:background="@color/lightGray"
            android:textColor="@color/white"/>
</android.support.constraint.ConstraintLayout>