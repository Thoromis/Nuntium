<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp" app:cardCornerRadius="5dp"
                                    app:cardPreventCornerOverlap="false">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" android:weightSum="10">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/participant_item_iv_avatar"
                android:layout_weight="2"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="8" android:weightSum="10">
            <TextView
                    android:text="Xaver Franz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/participant_item_tv_fullname"
                    android:layout_weight="7" android:textStyle="bold" android:textColor="@color/colorPrimaryDark"
                    android:gravity="left|center_vertical" android:padding="5dp"
                    android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/participant_item_tv_email"
                    android:layout_weight="3" android:padding="3dp" android:gravity="left|center_vertical"
                    android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>