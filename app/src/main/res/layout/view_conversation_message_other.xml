<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginEnd="50dp"
>

    <TextView
            android:text="@string/conv_message_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/view_conversation_message"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:maxWidth="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/black"
            android:background="@drawable/message_background_other"/>
    <TextView
            android:text="@string/conv_message_time"
            android:layout_width="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/view_conversation_message"
            app:layout_constraintStart_toEndOf="@id/view_conversation_message"
            android:layout_height="wrap_content" android:id="@+id/view_conversation_time" android:textSize="10sp"
            tools:ignore="SmallSp"/>


</android.support.constraint.ConstraintLayout>