<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_marginStart="50dp"
>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/conv_message_Text" android:id="@+id/view_conversation_message"
              android:padding="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_margin="8dp"
              android:maxWidth="300dp"
              android:textColor="@android:color/black"
              android:background="@drawable/message_background_me" android:gravity="start"
              android:layout_gravity="right" tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
            android:text="@string/conv_message_time"
            android:layout_width="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/view_conversation_message"
            app:layout_constraintEnd_toStartOf="@id/view_conversation_message"
            android:layout_height="wrap_content" android:id="@+id/view_conversation_time" android:textSize="10sp"
            tools:ignore="HardcodedText,SmallSp"/>
</android.support.constraint.ConstraintLayout>